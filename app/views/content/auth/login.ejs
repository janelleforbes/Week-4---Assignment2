<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="post">
                <input type="hidden" name="id" value="<%= username._id %>" >
                <div class="form-group">
                    <label for="nameTextField">Username</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter your username"
                    name="name" 
                    value="<%= user.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Password</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter your password
                    name="password" 
                    value="<%= user.password %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Email</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter your email
                    name="Email" 
                    value="<%= user.email %>"
                    >
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Login</button>
                
                    <a href="/business-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>