<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <a href="../contact/update.ejs" class="btn btn-primary" role="button">
            <form class="form" method="post">
<!--Form to include update contact details-->
                <input type="hidden" name="id" value="<%= username._id %>" >
                <div class="form-group">
                    <label for="nameTextField">Username</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Update your username"
                    name="name" 
                    value="<%= user.username %>"
                    required>
                </div>
<!--Name entry-->
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Update your name"
                    name="name" 
                    value="<%= user.name %>"
                    required>
                </div>
<!--Number entry-->
                <div class="form-group">
                    <label for="authorTextField">Number</label>
                    <input type="number" class="form-control"
                    id="authorTextField"
                    placeholder="Update your number"
                    name="number" 
                    value="<%= user.number %>"
                    required>
                </div>
<!--email entry-->
                <div class="form-group">
                    <label for="authorTextField">Email</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Update your email"
                    name="Email" 
                    value="<%= user.email %>"
                    >
                </div>

<!--Button to delete contact-->
                    <td class="text-center col-1">
                        <a href="../contact/list.ejs contact[count]._id %>"
                            class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete</a>
<!--Button to Cancel and return to contact list-->
                    <a href="../contact/list.ejs" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>